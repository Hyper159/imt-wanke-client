<Window x:Class="imt_wankeyun_client.Windows.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:imt_wankeyun_client.Windows"
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
        mc:Ignorable="d"  Style="{DynamicResource NoResize_window}"
        Title="批量登陆" Height="500" Width="700" ResizeMode="NoResize" x:Name="window"
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" MouseLeftButtonDown="loginWindow_MouseLeftButtonDown" Topmost="True">
    <Window.Background>
        <ImageBrush ImageSource="/img/defaultbkg.jpg"/>
    </Window.Background>
    <Grid>
        <TextBlock x:Name="tbk_title" Margin="10,10,0,0" FontSize="18" Foreground="White" FontWeight="Bold" Text="提示"/>
        <Grid VerticalAlignment="Stretch" x:Name="grid_login" Margin="0,41,0.2,0.4" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="42*"/>
                <RowDefinition Height="459*"/>
                <RowDefinition Height="46*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="tbk_tip" FontSize="18" Grid.Row="1" Margin="0,1.6,-0.6,7"></TextBlock>
            <TextBox FontSize="13"  AcceptsReturn="True" TextWrapping="Wrap" x:Name="tbx_content" Grid.Row="2" Margin="5,4.6,4.4,0.4" 
                     Foreground="Blue" IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
            <Button x:Name="btu_ok" Click="btu_ok_Click" Grid.Row="3"
                    Style="{DynamicResource SimpleButton}" Margin="199,4.8,198.4,4.8">确定</Button>
        </Grid>
        <Button x:Name="btu_close" Content="Button" HorizontalAlignment="Right" Height="28" VerticalAlignment="Top" Width="42" Style="{DynamicResource XButtonStyle}" Click="btu_close_Click"/>
    </Grid>
</Window>
